.flex-wrap {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}
.flex-item{    
    /* 相对的标准为750px */
    width: 700rpx;
    height: 200rpx;
    text-align: center;
    line-height: 200rpx;
    color:white;
}
.bc_green{
    background-color: green;
}
.bc_red{
    background-color: red;
    align-self: flex-end;
}
.bc_blue{
    background-color: blue;
}