/* pages/detail/detail.wxss */
.detail {
    width: 750rpx;
    height: 100%;
    margin: 0;
    padding: 0 20rpx;
    box-sizing: border-box;
}
.hd {
    position: relative;
    width: 100%;
    height: 600rpx;
    overflow: hidden;
    /* align-items: center; */
}
.hd-top {
    /* margin-bottom: 200rpx  ; */
    margin-top: 40rpx;
    width: 100%;
    height: 400rpx;
    text-align: center;
}
.hd-top_img {
    /* margin: 0 auto; */
    width: 80%;
    height: 350rpx;
}
.hd-bottom {
    
    /* width: 100%; */
    height: 220rpx;
    overflow: hidden;
}
.hd-bottom_lists {
    /* width: 300%; */
    height: 130rpx;
    /* padding-top: 20rpx; */
    width:100%;
    white-space: nowrap;
    /* background: #000; */
    /* line-height: 140rpx; */
}
.hd-bottom_list {
    /* float: left;   一个坑 */   
    display:inline-block;
    /* height: 100%; */
    width: 160rpx;
    height: 100rpx;
    margin-top: 20rpx;
    margin-right: 18rpx;
    border-radius: 10rpx;
    position: relative;
    /* border:1px solid red; */
}
/* .hd-bottom_list::after {
    content: "";

} */
.try {
    /* padding-top: 15rpx; */
    width: 160rpx;
    height: 100rpx;
    margin-top: 15rpx;
}
.hd-bottom_listImg {
    width: 100%;
    height: 100%;
    /* display: none; */
}
.hd-bottom_list .choose {
    /* display: block; */
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
    border: 2px solid green;
}
.hd-bottom_list .choose::after{
    content: "";
    width: 30rpx;
    height: 30rpx;
    top: -14rpx;
    position: absolute;
    border-radius: 50%;
    /* top: 0; */
    right: -14rpx;
    /* margin-top:  -12rpx; */
    background-color: green;
}
.hd-bottom_list .hide{
    /* display: none; */
    /* position: absolute;
    top: 0;
    left: 0; */
    /* display: inline-block; */
    width: 100%;
    height: 100%;
}

.bt {
    width: 100%;
    height: 100%;
    margin-bottom: 200rpx;
}
.ins {
    font-size: 30rpx;
    display: block;
    margin: -10rpx 0 50rpx 0;
}
.showGoods {
    width: 80%;
    margin: 0 auto;
}
.goods {
    /* display: inline-block; */
    width: 100%;
    height: 160rpx;
    /* position: relative; */
}
.goods::after {
    content: "";    
    position: absolute;
    /* z-index: 999; */
    width: 100%;
    height: 1px;
    /* bottom: 10rpx; */
    background: rgb(129, 125, 125);
}
.goods_pic {
    float: left;
    margin-top: 10rpx;
    width: 70rpx;
    height: 80rpx;
}
.countNum {
    float: right;
    /* display: inline; */
}
.minusIcon {
    margin-top: 20rpx;
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    border: 1px solid #000;
    text-align: center;
    line-height: 40rpx;
    display: none;
}
.goodsNum {
    text-decoration: underline;
    margin: 0 20rpx;
    display: none;
    text-decoration-color: green;
}
.addIcon {
    display: inline-block;
    margin-top: 20rpx;
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    border: 1px solid #000;
    text-align: center;
    line-height: 40rpx;
}
.show {
    display: inline-block;
}
.content {
    line-height: 45rpx;
    font-size: 30rpx;
    padding-left: 30rpx;
    overflow: hidden;
    height: 120rpx;
    /* background-color: red; */
}
.goods_price {
    display: block;
}
.accident {
    width: 100%;
    height: 80rpx;
    text-align: center;
    font-size: 20rpx;
    /* display: inline; */
}
.accident text {
    color: green;
    text-decoration-line: underline;
}
.footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    width: 750rpx;
    height: 150rpx;
    /* background: #000; */
    background-color: #fff;
    border-top: 1px solid rgb(187, 184, 184);
}
.sum {
    float: left;
    margin: 50rpx 0 0 40rpx;
}
.buy {
    float: right;
    margin: 30rpx 30rpx 0 0;

    /* background-color: #000; */
}
.buy button{
    /* display: block; */
    line-height: 60rpx;
    width: 200rpx;
    height: 60rpx;
    border-radius:60rpx;
    color: rgb(105, 105, 105);
    background-color:rgb(211, 212, 211);
}
.buy .hasGoods {
    color: #fff;
    background-color: green;
}